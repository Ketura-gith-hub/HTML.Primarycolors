<!DOCTYPE html>
<html>
<head>
<style>
  @import url('https://fonts.googleapis.com/css2?family=Barlow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Lora:ital,wght@0,400..700;1,400..700&family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Barlow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Lora:ital,wght@0,400..700;1,400..700&family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&display=swap');

:root{
    --primary-color:#6A0DAD;
    --secondary-color:#E34234;
    --accent1:#FFFFFF;
    --accent2:#000000;
    --font-family:"lora" ;
    --text-font:"Merriweather";
}
*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
body{
    font-family: var(--font-family);
    width: 100vw;
    height: 70vh;
    display: flex;
    justify-content: right;
    align-items: center;
    flex-direction: column;
}
nav{
    list-style: none;
    display: flex;
    align-items: center;
    padding: 10px;
    width: 100%;
    position: absolute;
    top:0;
    
}
.nav-logo{
    width: 50px;
    height: auto;
    margin-right: 20px;
}

 ul{
    list-style: none;
    display: flex;
    gap: 100px;
}
li{
    text-decoration: none;
    color:white;
    font-weight: bold;
    font-family: var(--text-font);

}
li a:hover{
    color:var(--accent2)
}
.nav-button{
    padding: 10px 20px;
    cursor: pointer;
    font-family: var(--text-font);
    
    border-radius: 20px;
    transition:background-color 0.5s;
    margin-left: auto;
    
}
.nav-button:hover{
    background-color: var();
}
img{
    max-width:50%;
    height: 55%;
    display: block;
    margin: 0px;
  
}
ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
}

li {
  float: center;
}

li a {
  display: block;
  padding: 10px;
  color:purple;
  height: 40%;
}

</style>
</head>
<body>
  <ul>
    <li><a href="#gallery">Gallery</a></li>
    <li><a href="#about">About Us</a></li>
    <li><a href="#contact">Contact</a></li>
    <li><a href="#hom">Home</a></li>
  </ul> 
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">
        <img src="agape2.jpg" alt="Logo" style="width:75px;" class="rounded-pill">
      </a>
    </div>
    <button class="nav-button">Apply now</button>
  </nav>
  <img src="agape.jpg" alt="main photo" class="main photo">



</body>
</html>
